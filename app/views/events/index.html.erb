
<div class="container">
  <form action="events/new">
    <input class="btn btn-link btn-lg" type="submit" value="Add a new event">
  </form>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Event</th>
      <th>Date</th>
      <th>Place</th>
    </tr>
  <thead>

  <% @events.each do |event| %>
  <tbody>
  <tr>
    <td> <%= link_to event.event, event_path(event) %></td>
    <td> <%= event.date %></td>
    <td> <%= event.place %></td>
    <br /><br /><br />
    <% end %>
  </tr>
   <tr>
   </table>
  </div>
